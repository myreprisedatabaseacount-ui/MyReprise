# Configuration MyReprise Logic Service - DÉVELOPPEMENT LOCAL
# Copier ce fichier vers .env pour le développement local

PORT=3001
NODE_ENV=development

# Base de données MySQL (local)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=myreprise

# Redis (local)
REDIS_HOST=localhost
REDIS_PORT=6379

# URLs Frontend (pour CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (développement seulement!)
JWT_SECRET=dev_jwt_secret_change_in_production_123456789

# Services externes (local)
PAYMENT_SERVICE_URL=http://localhost:8080
AI_SERVICE_URL=http://localhost:8000
GRAPH_SERVICE_URL=http://localhost:8002

# Neo4j (local)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j123

# Configuration base de données
DATABASE_URL=mysql://root:@localhost:3306/myreprise