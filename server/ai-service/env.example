# Configuration FastAPI AI Service

# Base de données MySQL
DATABASE_URL=mysql://root:@localhost:3306/myreprise

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# APIs IA
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Configuration du serveur
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Environnement
ENVIRONMENT=development
DEBUG=true

# Sécurité
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuration des modèles ML
MODEL_CACHE_DIR=./models
MAX_MODEL_CACHE_SIZE_GB=2
CACHE_TTL_SECONDS=3600

# Limites
MAX_FILE_SIZE_MB=10
MAX_TEXT_LENGTH=5000
MAX_IMAGE_SIZE_MB=5
MAX_AUDIO_SIZE_MB=20

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
